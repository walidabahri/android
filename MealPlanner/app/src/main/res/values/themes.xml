<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MealPlanner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Widget styles -->
        <item name="materialCardViewStyle">@style/Widget.MealPlanner.CardView</item>
        <item name="materialButtonStyle">@style/Widget.MealPlanner.Button</item>
        <item name="chipStyle">@style/Widget.MealPlanner.Chip</item>
    </style>
    
    <style name="Theme.MealPlanner" parent="Base.Theme.MealPlanner" />
    
    <!-- Custom widget styles -->
    <style name="Widget.MealPlanner.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">12dp</item>
    </style>
    
    <style name="Widget.MealPlanner.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    
    <style name="Widget.MealPlanner.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
</resources>